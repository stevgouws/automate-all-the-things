{
  "name": "automate-all-the-things",
  "version": "1.0.0",
  "description": "A collection of automations for various tasks",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build": "tsc",
    "set-env-test": "ln -sf env/.env.test .env && echo 'TEST ENV ACTIVE'",
    "set-env-prod": "ln -sf env/.env.prod .env && echo 'PROD ENV ACTIVE'",
    "pretest": "npm run set-env-test && npm run build",
    "posttest": "npm run set-env-prod",
    "test": "mocha ./dist/test --r dotenv/config",
    "create-mobility-routine": "npm run build && node -r dotenv/config ./dist/src/scripts/createMobilityRoutine/run.js | npx pino-pretty",
    "process-ynab-transactions": "npm run build && node -r dotenv/config ./dist/src/scripts/processYnabTransactions/run.js | npx pino-pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevgouws/automate-all-the-things.git"
  },
  "author": "Steven Gouws",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stevgouws/automate-all-the-things/issues"
  },
  "homepage": "https://github.com/stevgouws/automate-all-the-things#readme",
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@doist/todoist-api-typescript": "^3.0.3",
    "date-fns": "^3.6.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.9.0",
    "lodash": "^4.17.21",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "ynab": "^2.4.0"
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-prettier": "^5.0.1",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "sinon": "^17.0.1",
    "type-fest": "^4.26.1",
    "typescript": "^5.5.4"
  }
}
